{
	"name": "minecraft-wiki-mcp",
	"version": "1.0.0",
	"description": "MCP Server for Minecraft Datapack creation using Minecraft Wiki API",
	"type": "module",
	"bin": {
		"minecraft-wiki-mcp": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "node dist/index.js",
		"prepare": "npm run build",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/sharo-jef/minecraft-wiki-mcp.git"
	},
	"keywords": [
		"minecraft",
		"datapack",
		"mcp",
		"wiki",
		"ai"
	],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/sharo-jef/minecraft-wiki-mcp/issues"
	},
	"homepage": "https://github.com/sharo-jef/minecraft-wiki-mcp#readme",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"cheerio": "^1.1.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "^4.0.16",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
